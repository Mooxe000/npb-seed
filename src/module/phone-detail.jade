div.phone-images
  img.phone(
  ng-repeat='img in phone.images'
  ng-src='{{img}}'
  ng-class='{active: mainImageUrl==img}'
  )

h1(
ng-bind='phone.name'
)

p(
ng-bind='phone.description'
)

ul.phone-thumbs
  li(
  ng-repeat='img in phone.images'
  )
    img(
    ng-src='{{img}}'
    ng-click='setImage(img)'
    )

ul.specs
  li
    span Availability and Networks
    dl
      dt Availability
      dd(
      ng-repeat='availability in phone.availability'
      ng-bind='availability'
      )
  li
    span Battery
    dl
      dt Type
      dd(
      ng-bind='phone.battery.type'
      )
      dt Talk Time
      dd(
      ng-bind='phone.battery.talkTime'
      )
      dt Standby time (max)
      dd(
      ng-bind='phone.battery.standbyTime'
      )
  li
    span Storage and Memory
    dl
      dt RAM
      dd(
      ng-bind='phone.storage.ram'
      )
      dt Internal Storage
      dd(
      ng-bind='phone.storage.flash'
      )
  li
    span Connectivity
    dl
      dt Network Support
      dd(
      ng-bind='phone.connectivity.cell'
      )
      dt WiFi
      dd(
      ng-bind='phone.connectivity.wifi'
      )
      dt Bluetooth
      dd(
      ng-bind='phone.connectivity.bluetooth'
      )
      dt Infrared
      dd(
      ng-bind='phone.connectivity.infrared | checkmark'
      )
      dt GPS
      dd(
      ng-bind='phone.connectivity.gps | checkmark'
      )
  li
    span Android
    dl
      dt OS Version
      dd(
      ng-bind='phone.android.os'
      )
      dt UI
      dd(
      ng-bind='phone.android.ui'
      )
  li
    span Size and Weight
    dl
      dt Dimensions
      dd(
      ng-repeat='dim in phone.sizeAndWeight.dimensions'
      ng-bind='dim'
      )
      dt Weight
      dd(
      ng-bind='phone.sizeAndWeight.weight'
      )
  li
    span Display
    dl
      dt Screen size
      dd(
      ng-bind='phone.display.screenSize'
      )
      dt Screen resolution
      dd(
      ng-bind='phone.display.screenResolution'
      )
      dt Touch screen
      dd(
      ng-bind='phone.display.touchScreen | checkmark'
      )
  li
    span Hardware
    dl
      dt CPU
      dd(
      ng-bind='phone.hardware.cpu'
      )
      dt USB
      dd(
      ng-bind='phone.hardware.usb'
      )
      dt Audio / headphone jack
      dd(
      ng-bind='phone.hardware.audioJack'
      )
      dt FM Radio
      dd(
      ng-bind='phone.hardware.fmRadio | checkmark'
      )
      dt Accelerometer
      dd(
      ng-bind='phone.hardware.accelerometer | checkmark'
      )
  li
    span Camera
    dl
      dt Primary
      dd(
      ng-bind='phone.camera.primary'
      )
      dt Features
      dd(
      ng-bind='phone.camera.features.join(", ")'
      )
  li
    span Additional Features
    dd(
    ng-bind='phone.additionalFeatures'
    )
